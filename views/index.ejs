  <body class="bg-lightkhaki font-oswald select-none overflow-x-hidden">
    <%- include('partials/nav.ejs') %>
    <section
      class="flex flex-col justify-center items-center min-h-screen relative"
    >
      <img
        src="/images/blob1.svg"
        alt="blob"
        class="absolute drop-shadow-neo-brown -z-50"
      />
      <h2 class="pl-2 pt-2 max-w-lg text-[4rem] font-black leading-[1.1] z-20">
        The ratings app for your service professional. Finally.
